{
  "manifest_version": 3,
  "name": "PauseForMe",
  "version": "1.0",
  "description": "Pauses YouTube video when you leave the tab and resumes when you return.",
  "permissions": ["tabs", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
